    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Queelag Web - Playground</title>
  </head>
  <body class='flex flex-col gap-4 p-4'>
    <Avatar client:load />
    <Badge client:load />
    <Button client:load />
    <CheckBox client:load />
    <Divider client:load />
    <Form client:load />
    <Icon client:load />
    <Image client:load />
    <Input client:load />
    <Meter client:load />
    <TextArea client:load />
  </body>
</html>
